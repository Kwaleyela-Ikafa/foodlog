<% content_for :title do %>
  Foodlog &ndash; <%= DateTime.now%>
<% end %>

<div class="columns mt-6 is-centered">
  <% @entries.each do |entry| %>
    <div class="column is-one-quarter">
      <div class="card">
        <header class="card-header">
          <p class="card-header-title"><%= entry.meal_type%></p>
        </header>
        <div class="card-content">
          <div class="content">
            <p><span class="has-text-weight-bold"><%= render entry %></span></p>
            <p class="italic">Logged: <%= time_ago_in_words(entry.created_at) %> ago</p>
          </div>
        </div>
        <div class="card-footer">
          <p><%= link_to "Show this entry", entry, class: "card-footer-item"%></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

